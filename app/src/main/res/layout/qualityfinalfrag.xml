<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"



    tools:context="hub.rgpv.com.iTube.tartingScreenFragment"
    tools:showIn="@layout/activity_tarting_screen">




<RelativeLayout
    android:layout_centerInParent="true"
    android:id="@+id/center"
    android:background="@drawable/body_shape"
android:paddingLeft="28dp"
    android:paddingRight="28dp"
    android:paddingBottom="50dp"
    android:paddingTop="30dp"

    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <in.workarounds.typography.TextView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:font_name="font"
        android:layout_alignParentTop="true"
        android:id="@+id/title"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:text="Choose  Quality"

        android:textColor="#7a28a9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


<include
    android:id="@+id/lay"
    android:layout_below="@+id/title"
    layout="@layout/qualityselector"
    android:layout_height="wrap_content"
    android:layout_width="match_parent" />

    <ImageView
        android:tint="#ffffff"
        android:background="@drawable/ring"
        android:padding="8dp"
        android:layout_centerInParent="true"
        android:src="@drawable/download"
android:id="@+id/download"
    android:layout_below="@+id/lay"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:clickable="true"
        />


    <in.workarounds.typography.TextView
        android:layout_below="@+id/download"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:font_name="font"
android:clickable="true"
        android:id="@+id/download_t"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:text="DOWNLOAD"

        android:textColor="#fd3366"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>

    <RelativeLayout

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

    android:id="@+id/close"
        android:clickable="true"

        android:layout_width="80dp"
        android:layout_height="80dp"
        >


        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/cancel"

            android:id="@+id/progress_wheel"
            android:layout_width="20dp"
            android:layout_height="20dp"
            />



    </RelativeLayout>





</RelativeLayout>
